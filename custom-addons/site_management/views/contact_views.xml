<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_contact_list" model="ir.ui.view">
        <field name="name">site.contact.list</field>
        <field name="model">site.contact</field>
        <field name="arch" type="xml">
            <list>
                <field name="icon" widget="char"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
                <field name="rep_status"/>
                <field name="site_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_contact_form" model="ir.ui.view">
        <field name="name">site.contact.form</field>
        <field name="model">site.contact</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="icon" widget="char" class="oe_inline"/> 
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="fax"/>
                            <field name="status"/>
                            <field name="rep_status"/>
                        </group>
                        <group>
                            <field name="promo_ref"/>
                            <field name="frequency"/>
                            <field name="rolling_frequency"/>
                            <field name="territory"/>
                            <field name="site_id" invisible="context.get('default_site_id')"/>
                        </group>
                    </group>
                    <group string="Location">
                        <group>
                            <field name="address"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_contact_search" model="ir.ui.view">
        <field name="name">site.contact.search</field>
        <field name="model">site.contact</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="site_id"/>
                <field name="territory"/>
                <filter string="Green Status" name="green_status" domain="[('status', '=', 'green')]"/>
                <filter string="Yellow Status" name="yellow_status" domain="[('status', '=', 'yellow')]"/>
                <filter string="Red Status" name="red_status" domain="[('status', '=', 'red')]"/>
                <filter string="Active Reps" name="active_reps" domain="[('rep_status', '=', 'Active')]"/>
                <filter string="Inactive Reps" name="inactive_reps" domain="[('rep_status', '=', 'Inactive')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Site" name="group_by_site" domain="[]" context="{'group_by': 'site_id'}"/>
                    <filter string="Status" name="group_by_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Rep Status" name="group_by_rep_status" domain="[]" context="{'group_by': 'rep_status'}"/>
                    <filter string="Territory" name="group_by_territory" domain="[]" context="{'group_by': 'territory'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_contact" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">site.contact</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first contact!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_contact" name="Contacts" parent="menu_site_master" action="action_contact" sequence="2"/>
</odoo> 