<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_sample_record_tree" model="ir.ui.view">
        <field name="name">sample.record.list</field>
        <field name="model">sample.record</field>
        <field name="arch" type="xml">
            <list>
                <field name="icon"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
                <field name="rep_status"/>
                <field name="territory"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sample_record_form" model="ir.ui.view">
        <field name="name">sample.record.form</field>
        <field name="model">sample.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="icon"/>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="status"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="rep_status"/>
                            <field name="promo_ref"/>
                            <field name="frequency"/>
                            <field name="rolling_frequency"/>
                            <field name="territory"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Additional Information">
                            <group>
                                <group>
                                    <field name="fax"/>
                                    <field name="site_id"/>
                                </group>
                                <group>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sample_record_search" model="ir.ui.view">
        <field name="name">sample.record.search</field>
        <field name="model">sample.record</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="territory"/>
                <filter string="Active Reps" name="active_reps" domain="[('rep_status', '=', 'active')]"/>
                <filter string="Live Promos" name="live_promos" domain="[('promo_ref', '=', 'live')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Territory" name="group_by_territory" context="{'group_by': 'territory'}"/>
                    <filter string="Rep Status" name="group_by_rep_status" context="{'group_by': 'rep_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sample_record" model="ir.actions.act_window">
        <field name="name">Sample Records</field>
        <field name="res_model">sample.record</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sample_record_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sample record!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_sample_root" name="Sample CRUD" sequence="10"/>
    <menuitem id="menu_sample_record" name="Sample Records" parent="menu_sample_root" action="action_sample_record" sequence="1"/>
</odoo> 